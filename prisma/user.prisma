type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  email: String! @unique
  password: String!
  name: String!
  avatar: String
  slug: String
  emailVerified: Boolean! @default(value: false)
  recipes: [Recipe!]! @relation(link: INLINE, onDelete: CASCADE)
  modifications: [Modification!]! @relation(link: INLINE, onDelete: CASCADE)
}
