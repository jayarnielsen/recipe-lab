    "react-dom": "16.13.1",
    "react-filepond": "7.0.1",
    "react-icons": "3.10.0",
    "react-textarea-autosize": "8.2.0",
    "react-uid": "2.3.0",
    "speakingurl": "14.0.1",
    "validator": "13.1.1"
  },
  "devDependencies": {
    "@babel/core": "7.10.5",
    "@prisma/cli": "2.3.0",
