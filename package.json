    "classnames": "2.2.6",
    "cuid": "2.1.8",
    "diff-match-patch": "1.0.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "filepond": "4.18.0",
    "filepond-plugin-image-crop": "2.0.4",
    "filepond-plugin-image-resize": "2.0.7",
    "filepond-plugin-image-transform": "3.7.4",
    "graphql": "15.3.0",
    "graphql-middleware": "4.0.2",
    "graphql-shield": "7.3.2",
    "isomorphic-unfetch": "3.0.0",
    "js-cookie": "2.2.1",
    "jsonwebtoken": "8.5.1",
    "mathjs": "7.1.0",
    "morgan": "1.10.0",
